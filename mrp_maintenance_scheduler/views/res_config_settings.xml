<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.mrp</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="mrp.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@name='process_operations_setting_container']" position="inside">
                    <div class="col-lg-6 col-12 o_setting_box" id="maintenance_scheduler">
                        <div class="o_setting_left_pane">
                            <field name="mrp_maintenance_scheduler"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="mrp_maintenance_scheduler"/>
                            <div class="text-muted">
                                MRP maintenance scheduler
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
            </record>
</odoo>