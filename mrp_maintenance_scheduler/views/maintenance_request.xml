<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="maintenance_request_step_view_form" model="ir.ui.view">
        <field name="name">maintenance.request.step.view.form</field>
        <field name="model">maintenance.request.step</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="steps_id"/>
                    <field name="duration_excpected" widget="float_time"/>
                    <field name="real_duration" widget="float_time"/>
                    <field name="maintenance_opr_id"/>
                </group>
            </form>
        </field>
    </record>
    <record id="hr_equipment_request_view_form" model="ir.ui.view">
        <field name="name">equipment.request.form</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='maintenance_type']" position="after">
                <field name="maintenance_operation_id"/>
            </xpath>
            <xpath expr="//form/sheet" position="inside">
                <notebook>
                    <page string="Maintenance Request Steps">
                        <field name="maintenance_request_step_ids">
                            <tree editable="bottom">
                                <field name="steps_id" domain = "[('operation_id','=',maintenance_opr_id)]"/>
                                <field name="duration_excpected" widget="float_time"/>
                                <field name="real_duration" widget="float_time"/>
                                <field name="maintenance_opr_id"/>
                                <button name="button_start" type="object" string="Start" class="btn-success"/>
                                <button name="button_stop" type="object" string="Stop" class="btn-danger"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
        </record>
</odoo>